algoritmo "FUNCIONARIO"
var
  nome:caractere
  r:real
inicio
escreva("Nome do Funcionário: ")
leia(nome)
escreva("Salário: ")
leia(r)
escreval("O funcionário ", nome ," tem um salário de R$", r ," em junho" )

fimalgoritmo

