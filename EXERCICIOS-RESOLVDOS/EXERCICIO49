algoritmo "semnome"
var
   contador , num ,par ,impar : inteiro
inicio
   contador <- 1
   escreval(" QUANTOS PAR E IMPAR: ")
   escreval("")
   enquanto ( contador <= 6 ) faca
      escreva(" DIGITE O ",contador,"º NUMERO: ")
      leia(num)
      contador <- contador + 1
      se ( num % 2 = 0 ) entao
         par <- par + 1
      senao
         impar <- impar + 1
      fimse
   fimenquanto
   escreval("")
   escreval(" NUMERO PAR: ",par)
   escreval(" NUMERO IMPAR: ",impar)
fimalgoritmo

//49) Crie um programa que leia 6 números inteiros e no final mostre quantos
//  deles são pares e quantos são ímpares.
