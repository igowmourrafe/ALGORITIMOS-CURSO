algoritmo "semnome"
var
    km , dias , dias_apagar , km_apagar , total_apagar : real

inicio
    escreva(" Quantidade de Km percorrido: ")
    leia(km)
    escreva(" Dias de locação: ")
    leia(dias)
     dias_apagar <- dias * 90
     km_apagar <- km * 0.20
     total_apagar <- dias_apagar + km_apagar
    escreva("Total a ser pago pelo automovel é de ",total_apagar," reais.")
fimalgoritmo

