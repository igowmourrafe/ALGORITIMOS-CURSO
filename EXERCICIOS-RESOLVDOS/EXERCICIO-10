var
    altura , largura , m2 ,tinta: real

inicio
   escreva("Altura da parede: ")
   leia(altura)
   escreva("Largura da parede: ")
   leia(largura)
     m2 <- largura * altura
     tinta <- (m2 / 2)
   escreval(" A aréa da parede é ",m2," m².")
   escreva("É preciso de ",tinta," litros de tinta.")
   
